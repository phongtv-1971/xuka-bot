<div id="login" class="login-containers w-25 p-5 rounded">
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-box" class="col-md-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>
          <div class="devise-logo d-flex align-items-center justify-content-center fs-3 pb-2">
            <span class="fw-lighter">Sign up</span>
            |
            <span class="fw-bolder">XukaBot</span>
          </div>
          <div class="form-group">
            <label for="email">Email:</label><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="username">User Name:</label><br>
            <%= f.text_field :user_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="password">Password:</label><br>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="password_confirmation">Password confirmation:</label><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-action d-block pt-2">
            <button type="submit" class="btn btn-md btn-dark w-100 d-flex justify-content-center align-items-center">
              <i class="fas fa-sign-in-alt pe-1"></i>
              <span>Sign up</span>
            </button>
          </div>
          <div id="register-link" class="text-right pt-2">
            <%= render "admins/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
