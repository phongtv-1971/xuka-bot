<div class="dashboard-container bg-white p-2">
  <div class="dashboard-header">
    <h2 class="text-center">Hi <%= current_admin.user_name %> :)</h2>
    <p class="text-center fst-italic">* Please <%= @bots.present? ? "select a Bot" : "create a Bot" %></p>
  </div>
  <div class="d-flex list-bot flex-column">
    <% @bots.each do |bot| %>
      <%= link_to admins_bot_path(bot.id), class: "list-bot-items d-flex align-items-center" do %>
        <img src="<%= bot.avatar_url %>" alt="<%= bot.bot_name %>" class="bot-avatar">
        <div class="bot-name"><%= bot.bot_name %></div>
        <i class="fas fa-angle-right go-to-bot"></i>
      <% end %>
    <% end %>
  </div>
  <div class="dashboard-footer d-flex justify-content-center">
    <div class="dashboard-footer-link">
      <%= link_to new_admins_bot_path, class: "dashboard-footer-link-items" do %>
        <i class="fas fa-plus-circle create-bot-link"></i>
        <span class="btn-tooltip">Create Bot</span>
      <% end %>
      <%= link_to destroy_admin_session_path, class: "dashboard-footer-link-items" do %>
        <i class="fas fa-power-off logout-link"></i>
        <span class="btn-tooltip">Logout</span>
      <% end %>
    </div>
  </div>
</div>
